    private void t1_1ActionPerformed(java.awt.event.ActionEvent evt) {                                     
        
    }                                    

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       
        switch(t1.getText()){
            case "lapiz":
                c1.setPrecio(1000);    
                t1_1.setText(Integer.toString(c1.contador()));
                t1_2.setText(Integer.toString(c1.getIva())+"%");
                t1_3.setText("$"+Integer.toString(c1.getPrecio())); 
                break;
            case "aspirina":
                c2.setPrecio(800);
                t1_1.setText(Integer.toString(c2.contador()));
                t1_2.setText(Integer.toString(c2.getIva())+"%");
                t1_3.setText("$"+Integer.toString(c2.getPrecio()));  
                break;
            case "borrador":
                c3.setPrecio(500);
                t1_1.setText(Integer.toString(c3.contador()));
                t1_2.setText(Integer.toString(c3.getIva())+"%");
                t1_3.setText("$"+Integer.toString(c3.getPrecio()));
                break;
            case "pan":
                c4.setPrecio(200);
                t1_1.setText(Integer.toString(c4.contador()));
                t1_2.setText(Integer.toString(c4.getIva())+"%");
                t1_3.setText("$"+Integer.toString(c4.getPrecio()));
                break;
            default:  JOptionPane.showMessageDialog(null, "el producto no existe");  
        }
        
        ingresos.setText(Double.toString(c1.valor()+c2.valor()+c3.valor()+c4.valor()));
        
        if(c1.cont1 < c2.cont1 && c1.cont1<c3.cont1 && c1.cont1<c4.cont1){
           masV.setText("lapiz");
        } else {
            if(c2.cont1<c3.cont1 && c2.cont1<c3.cont1){
                masV.setText("aspirina");
            } else {
                if(c3.cont1<c4.cont1){
                    masV.setText("borrador");
                } else masV.setText("pan");
            }
        }
        
        if(c1.cont1 > c2.cont1 && c1.cont1>c3.cont1 && c1.cont1>c4.cont1){
           menosV.setText("lapiz");
        } else {
            if(c2.cont1>c3.cont1 && c2.cont1>c3.cont1){
                menosV.setText("aspirina");
            } else {
                if(c3.cont1>c4.cont1){
                    menosV.setText("borrador");
                } else menosV.setText("pan");
            }
        }
        
    }                                        

    private void p1ActionPerformed(java.awt.event.ActionEvent evt) {                                   

        if(t1.getText().equals("lapiz")){
            c1.setPrecio(1000);
            t1_1.setText(Integer.toString(c1.cont1));
            t1_2.setText(Integer.toString(c1.getIva())+"%");
            t1_3.setText("$"+Integer.toString(c1.getPrecio()));  
        }else{
            if(t1.getText().equals("aspirina")){
                c2.setPrecio(800);
                t1_1.setText(Integer.toString(c2.cont1));
                t1_2.setText(Integer.toString(c2.getIva())+"%");
                t1_3.setText("$"+Integer.toString(c2.getPrecio()));
            } else {
                if(t1.getText().equals("borrador")){
                c3.setPrecio(500);
                t1_1.setText(Integer.toString(c3.cont1));
                t1_2.setText(Integer.toString(c3.getIva())+"%");
                t1_3.setText("$"+Integer.toString(c3.getPrecio()));
                } else{
                    if(t1.getText().equals("pan")){
                    c4.setPrecio(200);
                    t1_1.setText(Integer.toString(c4.cont1));
                    t1_2.setText(Integer.toString(c4.getIva())+"%");
                    t1_3.setText("$"+Integer.toString(c4.getPrecio()));
                    } else JOptionPane.showMessageDialog(null, "el producto no existe");
                }
            }
        }
    }                                  

